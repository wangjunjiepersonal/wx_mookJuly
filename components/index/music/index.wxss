.classic-content{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.classic-content image:nth-child(1){
  width: 422rpx;
  height: 422rpx;
  margin-top: 60rpx;
  border-radius: 50%;
}
.classic-content image:nth-child(2){
  width: 120rpx;
  height: 120rpx;
  position: relative;
  bottom: 270rpx;
}
.classic-content image:nth-child(3){
  width: 44rpx;
  height: 128rpx;
  position: relative;
  bottom: 160rpx;
  right:310rpx;
}

@keyframes rotation {
  from {
    -webkit-transform: rotate(0deg);
  }
  to {
    -webkit-transform: rotate(360deg);
  }
}

.rotation {
  transform: rotate(360deg);
  animation: rotation 12s linear infinite;
  -moz-animation: rotation 12s linear infinite;
  -webkit-animation: rotation 12s linear infinite;
  -o-animation: rotation 12s linear infinite;
}
