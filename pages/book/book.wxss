/* pages/book/book.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.header {
  z-index: 99;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: fixed;
  box-shadow: 0 0 6rpx 0 #e3e3e3;
  border-top: 2rpx solid #f5f5f5;
  border-bottom: 2rpx solid #f5f5f5;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}

.sub-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 100rpx 0 0 0;
  background-color: #f5f5f5;
}

.books-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 10rpx 0 0 0;
  padding: 0 90rpx;
}

.books-container book-cmp {
  margin: 0 0 30rpx 0;
}

.box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 100rpx;
  height: 68rpx;
  width: 700rpx;
  color: #999;
  background-color: #f5f5f5;
}

.box image {
  margin: 0 20rpx -4rpx 0;
  width: 28rpx;
  height: 28rpx;
}

.head-img {
  margin: 40rpx 0 0 0;
  width: 106rpx;
  height: 34rpx;
}
